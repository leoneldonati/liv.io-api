{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"]
    }
  },

  "include": ["src/**/*"], // Ensure only src/ files are compiled
  "exclude": ["node_modules", "dist"]
}
